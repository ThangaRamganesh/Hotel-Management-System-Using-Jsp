<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<!-- Customer Login Servlet -->
	<servlet>
		<servlet-name>CustomerLoginServlet</servlet-name>
		<servlet-class>com.hotel.servlet.CustomerLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CustomerLoginServlet</servlet-name>
		<url-pattern>/CustomerLoginServlet</url-pattern>
	</servlet-mapping>

	<!-- Book Room Servlet (New Clean Version) -->
	<servlet>
		<servlet-name>BookRoomServlet</servlet-name>
		<servlet-class>com.hotel.servlet.BookRoomServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookRoomServlet</servlet-name>
		<url-pattern>/BookRoomServlet</url-pattern>
	</servlet-mapping>

	<!-- Room List Servlet -->
	<servlet>
		<servlet-name>RoomListServlet</servlet-name>
		<servlet-class>com.hotel.servlet.RoomListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RoomListServlet</servlet-name>
		<url-pattern>/RoomListServlet</url-pattern>
	</servlet-mapping>

	<!-- Logout Servlet -->
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.hotel.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>

	<!-- Admin Login Servlet -->
	<servlet>
		<servlet-name>AdminLoginServlet</servlet-name>
		<servlet-class>com.hotel.servlet.AdminLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminLoginServlet</servlet-name>
		<url-pattern>/AdminLoginServlet</url-pattern>
	</servlet-mapping>

	<!-- View Bookings Servlet -->
	<servlet>
		<servlet-name>ViewBookingsServlet</servlet-name>
		<servlet-class>com.hotel.servlet.ViewBookingsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ViewBookingsServlet</servlet-name>
		<url-pattern>/ViewBookingsServlet</url-pattern>
	</servlet-mapping>

	<!-- Admin Approval Servlet -->
	<servlet>
		<servlet-name>AdminApprovalServlet</servlet-name>
		<servlet-class>com.hotel.servlet.AdminApprovalServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminApprovalServlet</servlet-name>
		<url-pattern>/AdminApprovalServlet</url-pattern>
	</servlet-mapping>

	<!-- Book Room Form Servlet -->
	<servlet>
		<servlet-name>BookRoomFormServlet</servlet-name>
		<servlet-class>com.hotel.servlet.BookRoomFormServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookRoomFormServlet</servlet-name>
		<url-pattern>/BookRoomFormServlet</url-pattern>
	</servlet-mapping>

	<!-- Register Customer Servlet -->
	<servlet>
		<servlet-name>RegisterCustomerServlet</servlet-name>
		<servlet-class>com.hotel.servlet.RegisterCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterCustomerServlet</servlet-name>
		<url-pattern>/RegisterCustomerServlet</url-pattern>
	</servlet-mapping>

	<!-- Available Rooms Servlet -->
	<servlet>
		<servlet-name>AvailableRoomsServlet</servlet-name>
		<servlet-class>com.hotel.servlet.AvailableRoomsServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>AvailableRoomsServlet</servlet-name>
		<url-pattern>/AvailableRoomsServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AddRoomServlet</servlet-name>
		<servlet-class>com.hotel.servlet.AddRoomServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddRoomServlet</servlet-name>
		<url-pattern>/AddRoomServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>UpdateRoomServlet</servlet-name>
		<servlet-class>com.hotel.servlet.UpdateRoomServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateRoomServlet</servlet-name>
		<url-pattern>/UpdateRoomServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DeleteRoomServlet</servlet-name>
		<servlet-class>com.hotel.servlet.DeleteRoomServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteRoomServlet</servlet-name>
		<url-pattern>/DeleteRoomServlet</url-pattern>
	</servlet-mapping>
	<servlet>
    <servlet-name>UpdateBookingServlet</servlet-name>
    <servlet-class>com.hotel.servlet.UpdateBookingServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>UpdateBookingServlet</servlet-name>
    <url-pattern>/UpdateBookingServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>DeleteBookingServlet</servlet-name>
    <servlet-class>com.hotel.servlet.DeleteBookingServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>DeleteBookingServlet</servlet-name>
    <url-pattern>/DeleteBookingServlet</url-pattern>
</servlet-mapping>


	<!-- Welcome Page -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
